# OmniTrade AI Configuration
# Copy this file to .env and fill in your values

# Application
APP_NAME="OmniTrade AI"
DEBUG=false
ENVIRONMENT=production
SECRET_KEY=your-secret-key-here-change-this

# Database
DATABASE_URL=postgresql://user:password@localhost:5432/omnitrade
REDIS_URL=redis://localhost:6379/0
INFLUXDB_URL=http://localhost:8086
INFLUXDB_TOKEN=your-influxdb-token
INFLUXDB_ORG=omnitrade
INFLUXDB_BUCKET=trading_data

# Alpaca (Stock Trading)
# Get keys from: https://alpaca.markets/
ALPACA_API_KEY=your-alpaca-api-key
ALPACA_SECRET_KEY=your-alpaca-secret-key
ALPACA_BASE_URL=https://paper-api.alpaca.markets
ALPACA_LIVE_MODE=false  # Set to true for live trading (BE CAREFUL!)

# Binance (Crypto Trading)
# Get keys from: https://www.binance.com/
BINANCE_API_KEY=your-binance-api-key
BINANCE_SECRET_KEY=your-binance-secret-key
BINANCE_TESTNET=true  # Set to false for live trading (BE CAREFUL!)

# Market Data APIs (Optional)
FINNHUB_API_KEY=your-finnhub-key
ALPHA_VANTAGE_API_KEY=your-alpha-vantage-key

# AI/ML
OPENAI_API_KEY=your-openai-key

# Risk Management
MAX_POSITION_SIZE_PCT=5.0
MAX_PORTFOLIO_EXPOSURE_PCT=80.0
DEFAULT_STOP_LOSS_PCT=2.0
DAILY_LOSS_LIMIT_PCT=10.0
MAX_CONSECUTIVE_LOSSES=5

# Trading Controls
ENABLE_TRADING=false  # MUST BE MANUALLY ENABLED
TRADING_HOURS_ONLY=true
MIN_ORDER_SIZE_USD=10.0
MAX_OPEN_POSITIONS=20

# Notifications
TELEGRAM_BOT_TOKEN=your-telegram-bot-token
TELEGRAM_CHAT_ID=your-telegram-chat-id
TWILIO_ACCOUNT_SID=your-twilio-sid
TWILIO_AUTH_TOKEN=your-twilio-token
TWILIO_FROM_NUMBER=+1234567890
ALERT_EMAIL=your-email@example.com

# Monitoring
SENTRY_DSN=your-sentry-dsn
LOG_LEVEL=INFO

# CORS
BACKEND_CORS_ORIGINS=["http://localhost:3000","http://localhost:8000"]

